{
    xthickness = 3
    ythickness = 3

    engine "xfce" 
    {
        smooth_edge = true
        boxfill
        {
            fill_style = gradient
            orientation = vertical
            shade_start = 0.80
            shade_end = 1.80
        }
    }
}
