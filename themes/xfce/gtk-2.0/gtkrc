style "xfce-scrollbar" = "xfce-default"
{
    xthickness = 2
    ythickness = 2
    engine "xfce"
    {
        smooth_edge = true
        boxfill
        {
            fill_style = gradient
            orientation = auto
            shade_start = 1.05
            shade_end = 0.95
        }
    }
}
widget_class "*Scrollbar*"         style "xfce-scrollbar"
class "*Scrollbar*"                style "xfce-scrollbar"

style "xfce-button" = "xfce-default"
{
    xthickness = 2
    ythickness = 2

    base[ACTIVE]      = "#e0e0e0"
    base[INSENSITIVE] = "#f4f4f4"
    base[NORMAL]      = "#ffffff"
    base[PRELIGHT]    = "#f4f4f4"
    base[SELECTED]    = "#6ea0cd"

    bg[ACTIVE]        = "#e0e0e0"
    bg[INSENSITIVE]   = "#f4f4f4"
    bg[NORMAL]        = "#f4f4f4"
    bg[PRELIGHT]      = "#f4f4f4"
    bg[SELECTED]      = "#6ea0cd"

    engine "xfce"
    {
        smooth_edge = true
        boxfill
        {
            fill_style = gradient
            orientation = vertical
            shade_start = 1.05
            shade_end = 0.95
        }
    }
}
