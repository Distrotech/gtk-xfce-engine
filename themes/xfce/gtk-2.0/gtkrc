{
    xthickness = 1
    ythickness = 1

    engine "xfce" 
    {
        smooth_edge = true
        boxfill
        {
            fill_style = gradient
            orientation = vertical
            shade_start = 0.80
            shade_end = 1.80
        }
    }
}
widget_class "*Progress*"          style "xfce-progress" 
class "*Progress*"                 style "xfce-progress" 

